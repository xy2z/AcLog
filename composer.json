{
    "name": "xy2z/aclog",
    "description": "Simple PHP file-logger with zero-dependencies",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "xy2z\\AcLog\\": "src/"
        }
    },
    "authors": [
        {
            "name": "xy2z",
            "email": "xy2z@pm.me"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.4"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests --testdox",
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon",
        "fix": "vendor/bin/php-cs-fixer fix"
    }
}
